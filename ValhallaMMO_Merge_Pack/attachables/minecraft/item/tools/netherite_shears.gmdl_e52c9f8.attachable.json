{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "geyser_custom:gmdl_e52c9f8",
            "materials": {
                "default": "entity_alphatest_one_sided",
                "enchanted": "entity_alphatest_one_sided"
            },
            "textures": {
                "default": "textures/item/weapons/netherite_shears",
                "enchanted": "textures/misc/enchanted_item_glint"
            },
            "geometry": {
                "default": "geometry.geyser_custom.geo_85e2e1d"
            },
            "scripts": {
                "pre_animation": [
                    "v.main_hand = c.item_slot == 'main_hand';",
                    "v.off_hand = c.item_slot == 'off_hand';",
                    "v.head = c.item_slot == 'head';"
                ],
                "animate": [
                    {
                        "thirdperson_main_hand": "v.main_hand && !c.is_first_person"
                    },
                    {
                        "thirdperson_off_hand": "v.off_hand && !c.is_first_person"
                    },
                    {
                        "thirdperson_head": "v.head && !c.is_first_person"
                    },
                    {
                        "firstperson_main_hand": "v.main_hand && c.is_first_person"
                    },
                    {
                        "firstperson_off_hand": "v.off_hand && c.is_first_person"
                    },
                    {
                        "firstperson_head": "c.is_first_person && v.head"
                    }
                ]
            },
            "animations": {
                "thirdperson_main_hand": "animation.geyser_custom.geo_85e2e1d.thirdperson_main_hand",
                "thirdperson_off_hand": "animation.geyser_custom.geo_85e2e1d.thirdperson_off_hand",
                "thirdperson_head": "animation.geyser_custom.geo_85e2e1d.head",
                "firstperson_main_hand": "animation.geyser_custom.geo_85e2e1d.firstperson_main_hand",
                "firstperson_off_hand": "animation.geyser_custom.geo_85e2e1d.firstperson_off_hand",
                "firstperson_head": "animation.geyser_custom.disable"
            },
            "render_controllers": [
                "controller.render.item_default"
            ]
        }
    }
}